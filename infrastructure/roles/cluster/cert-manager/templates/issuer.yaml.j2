apiVersion: v1
kind: Secret
metadata:
  name: ca-key-pair
  namespace: {{ cert_manager_namespace }}
data:
  tls.crt: {{ cert_chain | b64encode }}
  tls.key: {{ key }}
---
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: ca-issuer
  namespace: {{ cert_manager_namespace }}
spec:
  ca:
    secretName: ca-key-pair
